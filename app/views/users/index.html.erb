<%= render 'blog_posts/nav' %>

<header class="intro-header" style="background-image: url('<%=image_path("user-bg")%>')">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                    <div class="site-heading">
                        <h1>User list</h1>
                        <hr class="small">
                        <span class="subheading"></span>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">    
                <% flash.each do |key, value| %>
                    <div class="alert alert-<%= key %>"><%= value %></div>
                <% end %>
                <%= link_to 'New User', new_user_admin_path, :class=>"btn btn-default" %>
                <%= link_to 'Export To CSV', users_path(format: :csv), :class=>"btn btn-success" %><br><br>      
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Email</th>
                                <th><center>Action</center></th>
                            </tr>
                        </thead>
                        <tbody>
                        <% @users.each do |user| %>
                            <tr>
                                <td><%= user.name %></td>
                                <td><%= user.email %></td>
                                <td>
                                    <div class="button" style="float: right;">
                                        <%= link_to 'Show',user_path(user.id), :class=>"btn btn-primary btn-sm" %>
                                        <%= link_to 'Edit',edit_user_path(user.id), :class=>"btn btn-warning btn-sm" %>
                                        <%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' }, :class=>"btn btn-danger btn-sm" %>
                                    </div>
                                </td>
                            </tr>
                        <% end %>
                        </tbody>
                    </table>               
                
            </div>
        </div>
    </div>

    <hr>

<%= render 'pages/footer' %>