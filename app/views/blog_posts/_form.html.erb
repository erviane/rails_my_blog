<%= form_for(@blog_post) do%>

  <div class="form-group">
    <%= label_tag 'Title' %>
    <%= text_field_tag 'title', @blog_post.title, class: 'form-control', required: true %>
  </div>

  <div class="form-group">
    <%= label_tag 'Summary' %>
    <%= text_field_tag 'summary', @blog_post.summary, class: 'form-control', required: true %>
  </div>

  <div class="form-group">
    <%= label_tag 'Content' %>
    <%= text_area_tag 'content', @blog_post.content, class: 'form-control', required: true %>
  </div>

  <div class="form-group">
   <%= hidden_field_tag 'user_id', @current_user.id %>
  </div>

  <div class="form-group">
    <%= label_tag 'Title Image URl' %>
    <%= text_field_tag 'title_image_url', @blog_post.title_image_url, class: 'form-control'%>
  </div>

  <div class="actions">
    <%= submit_tag "Save", class: 'btn btn-primary' %>
  </div>
<% end %>

